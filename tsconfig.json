{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "dist",
		"strictNullChecks": true
	},
	"include": ["src"]
}
